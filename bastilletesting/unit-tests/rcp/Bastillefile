# unit-tests/rcp

ARG OPTIONS
ARG JAIL
ARG RELEASE
ARG IP
ARG INTERFACE
ARG JAIL_PATH
ARG HOST_PATH

# create a jail

INCLUDE core/create --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=${IP} --arg INTERFACE=${INTERFACE}

# copy a file to host
INCLUDE core/rcp --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg JAIL_PATH=${JAIL_PATH} --arg HOST_PATH=${HOST_PATH}

# destroy jail
INCLUDE core/destroy-jail --arg OPTIONS="-afy" --arg JAIL=${JAIL}
