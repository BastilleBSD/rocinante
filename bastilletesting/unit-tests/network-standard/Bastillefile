# unit-tests network-standard

ARG OPTIONS
ARG JAIL
ARG RELEASE
ARG IP
ARG INTERFACE
ARG NEW_INTERFACE=bastille0
ARG NEW_IP=10.0.0.2
ARG ACTION

INCLUDE core/create --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=${IP} --arg INTERFACE=${INTERFACE}

INCLUDE core/network --arg OPTIONS="-Cax" --arg JAIL=${JAIL} --arg ACTION="add" --arg NEW_INTERFACE=${NEW_INTERFACE} --arg NEW_IP=${NEW_IP}

INCLUDE core/destroy-jail --arg OPTIONS="-axy" --arg JAIL=${JAIL}


