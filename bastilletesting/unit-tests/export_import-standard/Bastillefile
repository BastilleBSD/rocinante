# unit-tests export_import-standard

ARG OPTIONS
ARG JAIL=attica
ARG RELEASE=14.2-RELEASE
ARG IP=192.168.69.233
ARG INTERFACE=vtnet0
ARG FILE=/tmp/exported.xz
ARG PATH=/tmp/exported.xz

INCLUDE core/create --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=${IP} --arg INTERFACE=${INTERFACE}

INCLUDE core/export --arg OPTIONS="--xz" --arg JAIL=${JAIL} --arg PATH=${PATH}

INCLUDE core/destroy-jail --arg OPTIONS="-axy" --arg JAIL=${JAIL}

INCLUDE core/import --arg OPTIONS=${OPTIONS} --arg FILE=${FILE}

INCLUDE core/destroy-jail --arg OPTIONS="-axy" --arg JAIL="ALL"