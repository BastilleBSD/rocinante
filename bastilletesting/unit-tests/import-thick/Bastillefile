# unit-tests/import-thick

ARG OPTIONS="-T"
ARG JAIL
ARG RELEASE
ARG IP
ARG INTERFACE
ARG FILE=/tmp/*.xz
ARG PATH=/tmp


INCLUDE core/create --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=${IP} --arg INTERFACE=${INTERFACE}

INCLUDE core/export --arg OPTIONS="--xz" --arg JAIL=${JAIL} --arg PATH=${PATH}

INCLUDE core/destroy-jail --arg OPTIONS="-ay" --arg JAIL=${JAIL}

INCLUDE core/import --arg FILE=${FILE}

INCLUDE core/destroy-jail --arg OPTIONS="-ay" --arg JAIL="ALL"

CMD rm -rf /tmp/*.xz

CMD rm -rf /tmp/*.sha256