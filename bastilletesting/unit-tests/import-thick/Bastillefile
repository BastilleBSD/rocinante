# unit-tests/import-thick

ARG JAIL
ARG RELEASE
ARG IP
ARG INTERFACE
ARG FILE=/*.txz
ARG PATH=/


INCLUDE core/create --arg OPTIONS="-T" --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=${IP} --arg INTERFACE=${INTERFACE}

INCLUDE core/stop --arg JAIL=${JAIL}

INCLUDE core/export --arg OPTIONS="--txz" --arg JAIL=${JAIL} --arg PATH=${PATH}

INCLUDE core/destroy-jail --arg OPTIONS="-ay" --arg JAIL=${JAIL}

INCLUDE core/import --arg FILE=${FILE}

INCLUDE core/destroy-jail --arg OPTIONS="-ay" --arg JAIL="ALL"

CMD rm -rf /*.txz

CMD rm -rf /*.sha256

