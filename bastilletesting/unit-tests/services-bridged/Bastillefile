# unit-tests/services-bridged

ARG OPTIONS="-B"
ARG JAIL
ARG RELEASE
ARG IP
ARG INTERFACE

INCLUDE core/create --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=DHCP --arg INTERFACE=${INTERFACE}

INCLUDE core/pkg OPTIONS="-ay" --arg JAIL=${JAIL} --arg ARGS="install nginx"

INCLUDE core/service --arg JAIL=${JAIL} --arg SERVICE="nginx" --arg ARGS="start"

INCLUDE core/destroy-jail --arg OPTIONS="-afy" --arg JAIL=${JAIL}
