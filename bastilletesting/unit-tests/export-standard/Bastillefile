# unit-tests/export-standard

ARG OPTIONS
ARG JAIL
ARG RELEASE
ARG IP
ARG INTERFACE
ARG PATH=/tmp

INCLUDE core/create --arg OPTIONS=${OPTIONS} --arg JAIL=${JAIL} --arg RELEASE=${RELEASE} --arg IP=${IP} --arg INTERFACE=${INTERFACE}

INCLUDE core/stop --arg JAIL=${JAIL}

INCLUDE core/export --arg OPTIONS="--txz" --arg JAIL=${JAIL} --arg PATH=${PATH}

INCLUDE core/destroy-jail --arg OPTIONS="-afxy" --arg JAIL=${JAIL}

CMD rm -rf /tmp/*.txz

CMD rm -rf /tmp/*.sha256

